{
  "basePath": "http://localhost/api",
  "apiVersion": "4.0",
  "swaggerVersion": "1.2",
  "resourcePath": "/auth",
  "apis": [
    {
      "path": "/auth/sign_in",
      "operations": [
        {
          "method": "POST",
          "summary": "Authenticate the user",
          "nickname": "signIn",
          "responseClass": "Result",
          "parameters": [
              {
                  "id": "username",
                  "description": "Name of the user",
                  "required": true,
                  "dataType": "string"
              },
              {
                  "id": "password",
                  "description": "User password",
                  "required": true,
                  "dataType": "string"
              }
          ],
          "errorResponses": [
            {
              "reason": "Request was not POST.",
              "code": 400
            }
          ]
        }
      ]
    },
    {
      "path": "/auth/sign_out",
      "operations": [
        {
          "method": "POST",
          "summary": "Sign the user out",
          "nickname": "signOut",
          "responseClass": "Result",
          "parameters": [],
          "errorResponses": []
        }
      ]
    }
  ],
  "models": {
    "Result": {
      "id": "Result",
      "properties": {
        "success": {
          "type": "boolean",
          "description": "True if operation was successful",
          "required": true
        },
        "identity": {
          "type": "object",
          "description": "An object containing user information (w/o credentials)",
          "required": true
        }
      }
    }
  }

}
